{
    "name": "@mochi/cli",
    "version": "0.1.0",
    "description": "A simple scaffolding tool",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "type": "commonjs",
    "bin": {
        "mochi": "./dist/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "clean": "rm -rf ./dist && rm -rf ./test/tmp",
        "copy:templates": "cp -r ./.mochi/ /tmp/.mochi/",
        "install:local": "npm install -g .",
        "test": "jest",
        "release": "npm run clean && npm run copy:templates && npm run build && npm run test && echo Build Succeeded üëç",
        "uninstall:local": "npm uninstall -g @mochi/cli"
    },
    "keywords": [],
    "author": "Chance Linz <clinz.dev@gmail.com>",
    "license": "ISC",
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.17",
        "@types/yargs": "^17.0.8",
        "jest": "^27.5.1",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.3",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "chalk": "^4.1.2",
        "glob": "^7.2.0",
        "yargs": "^17.3.1"
    },
    "jest": {
        "preset": "ts-jest",
        "modulePathIgnorePatterns": [
            "<rootDir>/dist/"
        ]
    }
}
